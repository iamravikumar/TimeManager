@model IEnumerable<TimeManager.Models.TimeSpending>

@{
    ViewData["Title"] = "Zaman Harcamaları";
}

<h2>Zaman Harcamaları</h2>

<p>
    <a asp-action="Create">Yeni Ekle</a>
</p>
<table class="table table-striped table-hover dt-responsive">
    <thead>
        <tr>
                <th class="all text-nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Worker)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.TimeSpent)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th class="all text-nowrap"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkerUser.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task.Name)
            </td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Ayrıntılar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
